@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký</title>
    <link rel="stylesheet" href="assets/css/login.css">
    <!-- link bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- link font chữ logo brand (jaro) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jaro:opsz@6..72&family=Paytone+One&display=swap" rel="stylesheet">
</head>
<body>
    <img class="bg-img" src="assets/images/bg-login.jpg" alt="">
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <form action="" class="text-white text-center col-md-5">
            <h1>Register</h1>
            <div class="form-group">
                <div class="row">
                    <div class="col-xxl-4">
                        <input class="form-control my-2" type="text" placeholder="First Name" required>
                    </div>
                    <div class="col-xxl-4">
                        <input class="form-control my-2" type="text" placeholder="Last Name" required>
                    </div>
                    <div class="col-xxl-4">
                        <input class="form-control my-2" type="number" placeholder="Age" required>
                    </div>
                    <div class="col-xxl-12">
                        <input class="form-control my-2" type="text" placeholder="Username" required>
                    </div>
                    <div class="col-xxl-12">
                        <input class="form-control my-2" type="password" placeholder="Password" required>
                    </div>
                </div>
                <button class="btn btn-outline-warning form-control" id="Sign Up">Register</button>
                <p>Already a member? <a href="/" class="text-warning">Sign in</a></p>
            </div>
        </form>
    </div>

</body>
</html>