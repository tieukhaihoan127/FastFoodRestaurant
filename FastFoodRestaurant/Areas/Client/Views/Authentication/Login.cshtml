@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="~/assets/css/login.css">
    <!-- link bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- link font chữ logo brand (jaro) -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jaro:opsz@6..72&family=Paytone+One&display=swap" rel="stylesheet">
</head>
<body>
    <img class="bg-img" src="assets/images/bg-login.jpg" alt="">
    <div class="container box d-flex justify-content-center align-items-center min-vh-100 ">
        <form action="" class="text-white text-center col-md-5 m-5">
            <h1>Login</h1>
            <div class="form-group">
                <input class="form-control my-2" type="text" placeholder="Username">
                <input class="form-control my-2" type="password" placeholder="Password">

                <div class="d-flex my-1">
                    <input type="checkbox" name="remember" id="remember">
                    <label for="remember" class="mx-1">Remember me?</label>
                    <a href="" class="ms-auto text-white">Forget password?</a>
                </div>
                <button class="btn btn-outline-warning form-control" id="login">Login</button>
                <p>Don't have an account? <a href="register.html" class="text-warning">Sign Up</a></p>
            </div>
        </form>
    </div>

</body>
</html>