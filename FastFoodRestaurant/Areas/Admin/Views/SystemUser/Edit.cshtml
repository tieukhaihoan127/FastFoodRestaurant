@model SystemUser
@{
    var storesList = ViewData["StoresList"] as List<StoreIdName>;
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Thông tin nhân viên</h2>
        <div class="create-info">Thời gian tạo: 07/10/2024</div>
        <form class="forms-sample" asp-area="Admin" asp-controller="SystemUser" asp-action="Edit" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xl-3">
                    <div class="form-group">
                        <label for="input">Mã nhân viên</label>
                        <input type="text" required="required" class="form-control"
                               name="UserId" value="@Model.UserId" placeholder="Mã đơn hàng">
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="form-group">
                        <label for="input">Tên nhân viên</label>
                        <input type="text" required="required" class="form-control"
                               name="Name" value="@Model.Name"
                               placeholder="Tên nhân viên">
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="form-group">
                        <label for="input">Số điện thoại</label>
                        <input type="text" required="required" class="form-control"
                               name="PhoneNumber" value="@Model.PhoneNumber" placeholder="Số điện thoại">
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="form-group">
                        <label for="input">Email</label>
                        <input type="email" required="required" class="form-control"
                               name="Email" value="@Model.Email"
                               placeholder="Email">
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="select">
                        <label>Giới tính</label>
                        <select class="choose" name="Gender">
                            <option value="" disabled>--Select Gender--</option>
                            @if (Model.Gender.Equals("Nam  "))
                            {
                                <option value="Nam  " selected>Nam</option>
                                <option value="Nữ">Nữ</option>
                            }
                            else
                            {
                                <option value="Nam">Nam</option>
                                <option value="Nữ" selected>Nữ</option>
                            }

                        </select>
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="form-group">
                        <label for="input">Ngày sinh</label>
                        <input type="date" required="required" class="form-control"
                               name="DOB" value="@Model.DOB.ToString("yyyy-MM-dd")"
                               placeholder="Nhập ngày sinh">
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="select">
                        <label>Vai trò</label>
                        <select class="choose" name="Role">
                            <option value="" disabled>--Select Role--</option>
                            @if (Model.Role == "ADMIN               ")
                            {
                                <option value="ADMIN               " selected">Admin</option>
                                <option value="Staff">Nhân viên bán hàng</option>
                            }
                            else
                            {
                                <option value="ADMIN">Admin</option>
                                <option value="Staff" selected>Nhân viên bán hàng</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-3">
                    <div class="select">
                        <label>Chi nhánh</label>
                        <select class="choose" name="StoreId">
                            <option value="" disabled selected>--Select Store--</option>
                            @foreach (var item in storesList)
                            {
                                @if (Model.StoreId == item.StoreId)
                                {
                                    <option value="@item.StoreId" selected>@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.StoreId">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <label>Hình ảnh cá nhân</label>
                        <input type="file" name="pictureFile" id="fileInput" class="file-upload-default" accept="image/*">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled="" placeholder="Tải hình ảnh lên...">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button" onclick="document.getElementById('fileInput').click();" style=" margin-right: 0;">Upload</button>
                            </span>
                        </div>
                        <img src="@Model.PictureUrl" class="image-preview" />
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" id="cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>