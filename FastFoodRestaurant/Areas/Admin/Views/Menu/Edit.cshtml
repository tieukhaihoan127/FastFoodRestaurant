@using FastFoodRestaurant.DTO
@model Menu
@{
    var categoriesList = ViewData["CategoryList"] as List<CategoryIdName>;
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title">Thông tin món ăn</h2>
        <div class="create-info">Thời gian tạo: 07/10/2024</div>
        <form class="forms-sample" asp-controller="Menu" asp-action="Update" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label for="input">Mã món ăn</label>
                        <input type="text" required="required" class="form-control" readonly
                               name="MenuId" value="@Model.MenuId" placeholder="Mã món ăn">
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label for="input">Tên món ăn</label>
                        <input type="text" required="required" class="form-control"
                               name="Name" value="@Model.Name"
                               placeholder="Tên món ăn">
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="select">
                        <label>Danh mục món ăn</label>
                        <select class="choose" name="CategoryId">
                            <option value="" disabled>--Select Category--</option>
                            @foreach (var item in categoriesList)
                            {
                                @if(Model.CategoryId == item.CategoryId)
                                {
                                    <option value="@item.CategoryId" selected>@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.CategoryId">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>Giá tiền</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">VND</span>
                            </div>

                            <input type="text" name="Price" class="form-control" value="@Model.Price"  aria-label="Amount (to the nearest dollar)">
                        </div>
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <label for="textarea">Nội dung</label>
                        <textarea type="text" required="required" name="Description" class="form-control"
                                  name="detail">@Model.Description</textarea>
                    </div>
                </div>
                <div class="col-xl-12">
                    <div class="form-group">
                        <label>Hình ảnh danh mục</label>
                        <input type="file" name="pictureFile" id="fileInput" class="file-upload-default" accept="image/*">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled="" placeholder="Tải hình ảnh lên...">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-primary" type="button" onclick="document.getElementById('fileInput').click();" style=" margin-right: 0;">Upload</button>
                            </span>
                        </div>
                        <img src="@Model.PictureUrl" class="image-preview" />
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-center">
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a href="@Url.Action("Index", "Menu")" class="btn btn-light">Cancel</a>
            </div>
        </form>
    </div>
</div>